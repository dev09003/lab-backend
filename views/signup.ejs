      .custom-dropdown {
      position: relative;
      width: 250px;
      user-select: none;
    }

    .selected {
      padding: 10px;
      border: 1px solid #ccc;
      cursor: pointer;
      background-color: #f9f9f9;
      border-radius: 5px;
      position: relative;
      left: 10px;
    }

    .dropdown-options {
      display: none;
      border: 1px solid #ccc;
      position: relative;
      left: 50px;
      width: 100%;
      background: white;
      z-index: 1;
      border-radius: 5px;
      max-height: 200px;
      overflow-y: auto;
    }

    .dropdown-options.show {
      display: block;
    }

    .dropdown-options div {
      padding: 10px;
      display: flex;
      align-items: center;
      gap: 10px;
      cursor: pointer;
    }

    .dropdown-options div:hover {
      background-color: #f0f0f0;
    }

    .dropdown-options img {
      height: 30px;
      width: 30px;
      object-fit: cover;
      border-radius: 50%;
    }

